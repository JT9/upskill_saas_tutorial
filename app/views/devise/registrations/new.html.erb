<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <!-- Display information about plans on sign up page -->
        <% if params[:plan] == '2' %>
          <h1>Pro Account</h1>
          <p>Sign up for the pro account for 10 per month and get access to the community and contact information!</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for free and get basic access to the community</p>
        <% end %>
      </div>
      
      <div class="well">
        <h2>Sign up</h2>
        
        <!-- Check to see which plan a user selected from home page-->
        <% if params[:plan]== '2' %>
          <!-- Using partial to render sign up form -->
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>